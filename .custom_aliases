
# Composer
export PATH="$HOME/.composer/vendor/bin:$PATH"

# Program Aliases
alias v="vim"
alias sv="sudo vim"

# Apache
alias restartap="sudo service apache2 restart"
alias reloadap="sudo service apache2 reload"

# Tmux
alias tmux='tmux -2'
alias ta='tmux attach -t'
alias ts='tmux new-session -s'
alias tl='tmux list-sessions'

# Variables
if [ -f ~/.custom_aliases_var ]; then
    . ~/.custom_aliases_var
fi

# History
# export HISTFILESIZE=20000
# export HISTSIZE=10000
# shopt -s histappend
# Combine multiline commands into one in history
# shopt -s cmdhist
# Ignore duplicates, ls without options and builtin commands
# HISTCONTROL=ignoredups
# export HISTIGNORE="&:ls:[bf]g:exit"

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Up
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Dropbox
alias startdropbox="~/.dropbox-dist/dropboxd"

# .deb
alias installdeb="sudo dpkg -i"
alias uninstalldeb="sudo dpkg -r"

# Move all files up a directory
alias allfilesup="mv * .[^.]* .."

# Remove all files in a directory
alias rmallfiles="rm -r * .[^.]*"

# Location Aliases
alias www="cd /var/www"
alias dl="cd ~/downloads"
alias crap="cd ~/crap"

# apt-get
alias agi='sudo apt-get install'
alias agu='sudo apt-get update && sudo apt-get upgrade'
alias aga='sudo apt-get autoremove'
alias agr='sudo apt-get remove'
alias ags='sudo apt-get search'

