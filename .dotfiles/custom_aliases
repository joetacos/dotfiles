#### VARIABLES
if [ -f ~/.dotfiles/custom_aliases_var ]; then
    . ~/.dotfiles/custom_aliases_var
fi


#### DROPBOX
alias startdropbox="~/.dropbox-dist/dropboxd"


#### .deb
alias installdeb="sudo dpkg -i"
alias uninstalldeb="sudo dpkg -r"


#### Move all files up a directory
alias allfilesup="mv * .[^.]* .."


#### Remove all files in a directory
alias rmallfiles="rm -r * .[^.]*"


#### LOCATION ALIASES
alias www="cd /var/www"
alias dl="cd ~/downloads"
alias crap="cd ~/crap"


#### GO
export GOROOT=$HOME/go
export PATH=$PATH:$GOROOT/bin

