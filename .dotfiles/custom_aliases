

#### DEFAULTS
export EDITOR="vim"


#### TMUX
alias tmux='tmux -2'
alias ta='tmux attach -t'
alias ts='tmux new-session -s'
alias tl='tmux list-sessions'


#### UBUNTU
alias agu='sudo apt-get update && sudo apt-get upgrade'
alias ll='ls -la'


#### COMPOSER
export PATH="$HOME/.composer/vendor/bin:$PATH"


#### PROGRAM ALIASES
alias v="vim"
alias sv="sudo vim"


#### GITHUB
#export PATH="$HOME/custom-programs/hub:$PATH"
#alias git="hub"


#### APACHE
alias restartap="sudo service apache2 restart"
alias reloadap="sudo service apache2 reload"
